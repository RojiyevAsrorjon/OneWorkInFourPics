<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="bg_letters_top">
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@drawable/bg_letter_button</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="bg_letters">
        <item name="android:fontFamily">monospace</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#27262C</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/bg_letter_button</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="bg_answers">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@drawable/bg_answer_button</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>